SITE_SECTIONS = ['identity', 'experience', 'projects']
content = '<?xml version="1.0" encoding="UTF-8"?>\n'
content += '<urlset xmlns="http://www.sitemaps.org/schemas/sitemap/0.9">\n'

for section in SITE_SECTIONS:
    url = f'https://freddymejia.com/{section}' if section else 'https://freddymejia.com/'
    priority = '1.0' if section == '' else '0.8'
    
    content += '    <url>\n'
    content += f'        <loc>{url}</loc>\n'
    content += '        <lastmod>2026-01-25</lastmod>\n'
    content += '        <changefreq>weekly</changefreq>\n'
    content += f'        <priority>{priority}</priority>\n'
    content += '    </url>\n'

content += '</urlset>'
